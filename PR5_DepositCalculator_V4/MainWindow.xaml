<Window x:Class="DepositCalculator_V4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вариант №4" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Сумма" Grid.Row="0" Grid.Column="0" Margin="10,10,0,0"/>
        <TextBox x:Name="txtSum" Grid.Row="0" Grid.Column="1" Margin="10,5,0,0" Width="150" Height="25"/>

        <TextBlock Text="Срок (месяцев)" Grid.Row="1" Grid.Column="0" Margin="10,10,0,0"/>
        <TextBox x:Name="txtMonths" Grid.Row="1" Grid.Column="1" Margin="10,5,0,0" Width="150" Height="25"/>

        <TextBlock Text="Процентная ставка" Grid.Row="2" Grid.Column="0" Margin="10,10,0,0"/>
        <TextBox x:Name="txtRate" Grid.Row="2" Grid.Column="1" Margin="10,5,0,0" Width="150" Height="25"/>

        <GroupBox Header="Схема начисления %" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Margin="10,10,10,0" Width="180" Height="100">
            <StackPanel>
                <RadioButton x:Name="rbSimple" Content="простые проценты" IsChecked="True" Margin="5"/>
                <RadioButton x:Name="rbCompound" Content="сложные проценты" Margin="5"/>
            </StackPanel>
        </GroupBox>

        <Label x:Name="lblResult" Content="Доход по вкладу =" Foreground="Red" 
               FontSize="14" FontWeight="Bold" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,10,0,0"/>

        <Button x:Name="btnCalculate" Content="Вычислить" Grid.Row="3" Grid.Column="2" Margin="10,10,10,0" Width="100" Height="25"
                Click="btnCalculate_Click"/>
    </Grid>
</Window>